{
  "name": "clover",
  "private": true,
  "description": "Scaffolding utility",
  "homepage": "https://roots.io/clover",
  "repository": {
    "type": "git",
    "url": "https://github.com/roots/clover.git"
  },
  "license": "MIT",
  "contributors": [
    {
      "name": "Kelly Mears",
      "url": "https://github.com/kellymears"
    }
  ],
  "engines": {
    "node": "^16.3.0"
  },
  "workspaces": {
    "packages": [
      "src/base",
      "src/test",
      "src/@roots/*"
    ]
  },
  "scripts": {
    "build": "yarn workspaces foreach --topological-dev --no-private  -i -p -v run build",
    "build:cjs": "yarn workspaces foreach --no-private --topological-dev -i -p -v run build:cjs",
    "build:esm": "yarn workspaces foreach --no-private  --topological-dev -i -p -v run build:esm",
    "build:ci": "yarn workspaces foreach --no-private  --topological-dev run build",
    "build:ci:cjs": "yarn workspaces foreach --no-private  --topological-dev run build:cjs",
    "build:ci:esm": "yarn workspaces foreach --no-private  --topological-dev run build:esm",
    "profile": "yarn workspaces foreach --topological-dev --no-private  run profile",
    "profile:cjs": "yarn workspaces foreach --no-private  --topological-dev run profile:cjs",
    "profile:esm": "yarn workspaces foreach --no-private  --topological-dev run profile:esm",
    "clean": "yarn workspaces foreach --no-private  -p -v run clean",
    "lint": "yarn workspaces foreach --no-private  -p -v run lint",
    "pkg": "yarn workspaces foreach --no-private -p -v run pkg",
    "docs": "yarn node ./dev/docs/gen/cli.js",
    "test:pre": "yarn node ./jest.pre.js",
    "test:post": "yarn node ./jest.post.js",
    "test:spec:ci": "yarn run jest --coverage --maxWorkers=1 --testPathIgnorePatterns='tests/integration' --testPathIgnorePatterns='tests/util'",
    "test:spec": "yarn run jest --coverage --testPathIgnorePatterns='tests/integration' --testPathIgnorePatterns='tests/util'",
    "test:integration": "yarn node ./jest.integration.js",
    "test:ci": "yarn run-s test:spec:ci test:integration",
    "test:all": "yarn run-s test:spec test:integration",
    "test": "yarn jest --coverage --testPathIgnorePatterns='tests/integration' --testPathIgnorePatterns='tests/util'",
    "majestic": "yarn dlx majestic"
  },
  "devDependencies": {
    "@skypack/package-check": "^0.2.2",
    "@types/eslint": "^7.2.13",
    "@types/fs-extra": "^9.0.11",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.170",
    "@types/node": "^15.12.2",
    "@types/prettier": "^2.3.0",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.7",
    "@types/signale": "^1.4.1",
    "@types/weak-napi": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "execa": "^5.1.1",
    "ink-testing-library": "^2.1.0",
    "lodash": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.1",
    "rimraf": "^3.0.2",
    "type-fest": "^1.2.0",
    "typescript": "^4.3.2"
  },
  "volta": {
    "node": "16.3.0"
  }
}
