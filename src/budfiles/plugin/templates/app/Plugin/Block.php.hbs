<?php

namespace {{pascalcase namespace}}\Plugin;

use {{pascalcase namespace}}\Plugin\BlockInterface;
use Psr\Container\ContainerInterface;
use Tightenco\Collect\Support\Collection;

/**
 * Block class.
 */
class Block implements BlockInterface
{
    /** @var string */
    protected $handle;

    /** @var array */
    protected $dependencies;

    /** @var array */
    protected $assets;

    /**
     * Constructor.
     */
    public function __construct(ContainerInterface $bud, Collection $collection)
    {
        $this->bud = $bud;
        $this->assets = $collection::make([]);
    }

    /**
     * Get handle.
     *
     * @return string
     */
    public function getHandle(): string
    {
        return $this->handle;
    }

    /**
     * Set handle.
     *
     * @param  string $handle
     * @return Block
     */
    public function setHandle(string $handle): void
    {
        $this->handle = $this->bud->get('config.namespace') . '/' . $handle;
    }

    /**
     * Get manifest entry
     */
    public function getAssets()
    {
        return $this->assets;
    }

    /**
     * Set manifest entry.
     */
    public function addAsset($asset)
    {
        $this->assets->push($asset);
    }

    /**
     * Get dependencies.
     */
    public function getDependencies(): array
    {
        return $this->dependencies;
    }

    /**
     * Set dependencies.
     */
    public function setDependencies(array $dependencies): void
    {
        $this->dependencies = $dependencies;
    }
}
